<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:paddingStart="10dp">

    <TextView
        android:id="@+id/variation_name_svpl"
        android:layout_width="121dp"
        android:layout_height="19dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/variation_value_svpl"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/textView21"
        app:layout_constraintStart_toEndOf="@+id/textView21"
        app:layout_constraintTop_toTopOf="@+id/textView21" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:layout_marginStart="4dp"
        android:gravity="center"
        android:text=":"
        app:layout_constraintBottom_toBottomOf="@+id/variation_name_svpl"
        app:layout_constraintStart_toEndOf="@+id/variation_name_svpl"
        app:layout_constraintTop_toTopOf="@+id/variation_name_svpl" />
</androidx.constraintlayout.widget.ConstraintLayout>